<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#9FE5F3" />
            <gradient android:angle="-90" android:startColor="#9FE5F3" android:endColor="#9FE5F3"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#9FE5F3" />
            <solid android:color="#9FE5F3"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#9FE5F3" />
            <gradient android:angle="-90" android:startColor="#F9FBFC" android:endColor="#19286F" />
        </shape>
    </item>
</selector>